{
  "name": "@opennexus/synology-chat",
  "version": "2026.2.23",
  "description": "Synology Chat channel plugin for OpenNexus",
  "type": "module",
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "opennexus": "workspace:*"
  },
  "opennexus": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "synology-chat",
      "label": "Synology Chat",
      "selectionLabel": "Synology Chat (Webhook)",
      "docsPath": "/channels/synology-chat",
      "docsLabel": "synology-chat",
      "blurb": "Connect your Synology NAS Chat to OpenNexus with full agent capabilities.",
      "order": 90
    },
    "install": {
      "npmSpec": "@opennexus/synology-chat",
      "localPath": "extensions/synology-chat",
      "defaultChoice": "npm"
    }
  }
}
