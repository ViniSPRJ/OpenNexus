# OpenNexus gateway â€” Podman Quadlet (rootless)
# Installed by setup-podman.sh into opennexus's ~/.config/containers/systemd/
# {{OPENNEXUS_HOME}} is replaced at install time.

[Unit]
Description=OpenNexus gateway (rootless Podman)

[Container]
Image=opennexus:local
ContainerName=opennexus
UserNS=keep-id
Volume={{OPENNEXUS_HOME}}/.opennexus:/home/node/.opennexus
EnvironmentFile={{OPENNEXUS_HOME}}/.opennexus/.env
Environment=HOME=/home/node
Environment=TERM=xterm-256color
PublishPort=18789:18789
PublishPort=18790:18790
Pull=never
Exec=node dist/index.js gateway --bind lan --port 18789

[Service]
TimeoutStartSec=300
Restart=on-failure

[Install]
WantedBy=default.target
